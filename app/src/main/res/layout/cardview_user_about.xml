<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/aboutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/dummy"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aboutTitle"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/dummy"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/aboutImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aboutInfo" />

        <WebView
            android:id="@+id/aboutMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aboutImage" />

        <Button
            android:id="@+id/buttonAboutMapDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aboutMap"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@color/colorLightBtnBg"
            android:padding="10dp"
            android:text="@string/get_directions_link"
            android:textAllCaps="false"
            android:textColor="@color/colorLightBtnText"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
